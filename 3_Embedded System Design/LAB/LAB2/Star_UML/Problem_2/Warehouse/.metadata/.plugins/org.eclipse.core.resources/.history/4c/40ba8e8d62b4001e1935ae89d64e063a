package person;

public class Teacher extends Person {
	
	private int numofcourses=0;
	private String courses[]={};
	int i=0;
	
	public Teacher(String name,String address)
	 {
		 super(name,address);
	   }
	 public boolean addcourse(String course)
	 {
		 int k=0;
		 if(k==i)
		 {
		 courses[i]=course;
		 i++;
		 return true;
		 }
		 else
		 {
			 for(;k<i;k++)
			 {
				 if(courses[k].equals(course))
					 return false;
				 
				 else
				 {
				 courses[i]=course;
				 i++;
				return true; 
				 }}}}
}
